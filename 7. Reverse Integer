class Solution(object):
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """
        if x > 0:
            nums = ListNode(x%10);
            x = x//10;
            insert = nums;
            renum = 0;
            c1 = 0;
            while x>0 :
                temp = ListNode(x%10);
                insert.next = temp;
                insert = insert.next;
                x = x//10;
                
            while nums is not None:
                renum = renum*10 + nums.val;
                nums = nums.next;
            
            if renum > 2**31-1:
                return 0
            else:
                return renum
        
        if x < 0:
            x = -x;
            nums = ListNode(x%10);
            x = x//10;
            insert = nums;
            renum = 0;
            c1 = 0;
            while x>0 :
                temp = ListNode(x%10);
                insert.next = temp;
                insert = insert.next;
                x = x//10;
                
            while nums is not None:
                renum = renum*10 + nums.val;
                nums = nums.next;
            
            if -renum < -2**31:
                return 0
            else:
                return -renum
        if x == 0:
            return 0
